{% extends "TroiswaBackBundle::layout.html.twig" %}
{% block title %}
    {{ parent() }} Fiche acteur
{% endblock %}

{% block css %}
    {{ parent() }}
{% endblock %}

{% block central %}

<div id="page-wrapper">
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    La fiche de {{ unActeur.prenom }}&nbsp{{ unActeur.nom }}
                </h1>
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-dashboard"></i>  <a href="{{ path("troiswa_back_accueilDashboard") }}">Dashboard</a>
                    </li>
                    <li >
                        <i class="fa fa-user"></i> <a href="{{ path("troiswa_back_listingActeurs") }}"> Tous les acteurs</a>
                    </li>
                    <li>
                        <i class="fa fa-list-alt"></i> La fiche de {{ unActeur.prenom }}&nbsp{{ unActeur.nom }}
                    </li>
                </ol>
            </div>
        </div>
        <!-- /.row -->

        <div class="row">
            <div class="col-md-5">
                    <img class="img-responsive" src="{{ asset(unActeur.displayImage) }}" alt="">
            </div>
            <div class="col-md-7">
                <h1>{{ unActeur.prenom }}&nbsp{{ unActeur.nom }}</h1>
                <h4>Né(e) le {{ unActeur.dateNaissance |date("d/m/Y") }} à {{ unActeur.ville }}</h4>
                <p>{{ unActeur.bio }}</p>
                <p>Apparaît dans : 
                {% for film in unActeur.liaisonFilms %}
                     <li><a href="{{ path("troiswa_back_ficheFilm",{"id":film.id}) }}">{{ film.titre }}</a></li>
                {% endfor %}
                </p>
            </div>
        </div>
        <!-- /.row -->

    </div>
    <!-- /.container-fluid -->

</div>
<!-- /#page-wrapper -->
{% endblock %}

{% block js %}
{% endblock %}