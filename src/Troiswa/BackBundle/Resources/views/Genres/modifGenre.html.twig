{% extends "TroiswaBackBundle::layout.html.twig" %}
{% block title %}
    {{ parent() }} Modifier un genre
{% endblock %}

{% block css %}
    {{ parent() }}
{% endblock %}

{% block central %}

<div id="page-wrapper">

    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                Modifier le genre
                </h1>
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-dashboard"></i>  <a href="{{ path("troiswa_back_accueilDashboard") }}">Dashboard</a>
                    </li>
                    <li >
                        <i class="fa fa-fw fa-th-list"></i> <a href="{{ path("troiswa_back_listingGenres") }}"> Tous les genres</a>
                    </li>
                      <li >
                        <span class="glyphicon glyphicon-open-file"></span>  Modifier un genre
                    </li>
                </ol>
            </div>
        </div>
        <!-- /.row -->

        <div class="row">
            <div class="col-md-4">
                {{ form_start(formGenre, {"attr":{"novalidate":"novalidate"}}) }}
                {{ form_errors(formGenre) }}
                <div class="form-group">
                {{ form_label(formGenre.type, "Type") }}
                {{ form_widget(formGenre.type, {"attr":{"class":"form-control", "placeholder":"Entrer le type de genre"}, "id":"type"}) }}
                </div>
                <div>
                {% if form_errors(formGenre.type) is not empty %}
                    <br><div class="alert alert-danger">
                        {{ form_errors(formGenre.type) }}
                    </div>
                {% endif %}
                </div>
                <div class="form-group">
                {{ form_label(formGenre.type, "Description") }}
                {{ form_widget(formGenre.description, {"attr":{"class":"form-control", "placeholder":"Entrer la description du genre"}, "id":"description"}) }}
                </div>
                <div>
                {% if form_errors(formGenre.description) is not empty %}
                    <div class="alert alert-danger">
                        {{ form_errors(formGenre.description) }}
                    </div>
                {% endif %}
                <div class="form-group">
                {{ form_widget(formGenre.modifier, {"attr":{"class":"btn btn-primary"}, "id":"modifier"}) }}
                </div>
                {{ form_end(formGenre) }}
            </div>
        </div>

            </div>
        </div>
        <!-- /.row -->

    </div>
    <!-- /.container-fluid -->

</div>
<!-- /#page-wrapper -->
{% endblock %}

{% block js %}
{% endblock %}